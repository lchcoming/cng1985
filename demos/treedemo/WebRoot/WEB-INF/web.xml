<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:applicationContext.xml,

		</param-value>
	</context-param>
	<!-- Spring configuration begin -->
	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>

	<filter>
		<filter-name>CharacterEncodingFilter</filter-name>
		<filter-class>
			org.springframework.web.filter.CharacterEncodingFilter
		</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CharacterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- Spring configuration end -->
	<!-- Struts2 configuration begin -->
	<filter>
		<filter-name>struts2-cleanup</filter-name>
		<filter-class>
			org.apache.struts2.dispatcher.ActionContextCleanUp
		</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>struts2-cleanup</filter-name>
		<url-pattern>*.action</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>struts2-cleanup</filter-name>
		<url-pattern>/struts/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>struts2</filter-name>
		<filter-class>
			org.apache.struts2.dispatcher.FilterDispatcher
		</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>*.action</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	<!-- Struts2 configuration end -->
	<servlet>
		<servlet-name>dwr-invoker</servlet-name>
		
		<servlet-class>
			org.directwebremoting.servlet.DwrServlet
		</servlet-class>
		<init-param>
			<param-name>debug</param-name>
			<param-value>true</param-value>
		</init-param>
	</servlet>
  <servlet>
    <servlet-name>NavigateEditServlet</servlet-name>
    <servlet-class>com.ada.dwr.NavigateEditServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>NavigateJsonServlet</servlet-name>
    <servlet-class>com.ada.dwr.NavigateJsonServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>NavigateSaveServlet</servlet-name>
    <servlet-class>com.ada.dwr.NavigateSaveServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>TreeHelpServlet</servlet-name>
    <servlet-class>com.ada.servlet.TreeHelpServlet</servlet-class>
  </servlet>





	<servlet-mapping>
		<servlet-name>dwr-invoker</servlet-name>
		<url-pattern>/dwr/*</url-pattern>
	</servlet-mapping>
  <servlet-mapping>
    <servlet-name>NavigateEditServlet</servlet-name>
    <url-pattern>/navigateedit</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>NavigateJsonServlet</servlet-name>
    <url-pattern>/navigatejson</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>NavigateSaveServlet</servlet-name>
    <url-pattern>/navigatesave</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>TreeHelpServlet</servlet-name>
    <url-pattern>/treejsonwork</url-pattern>
  </servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
